{
  "name": "dreamprotocol",
  "version": "0.1.0",
  "private": true,
  "description": "Dream Protocol - Dual-identity governance platform",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm --filter flagship dev",
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --testNamePattern='Unit'",
    "test:integration": "vitest run --testNamePattern='Integration'",
    "test:e2e": "vitest run --testNamePattern='E2E|Cross-Module'",
    "db:migrate": "node scripts/migrate.js",
    "db:rollback": "node scripts/rollback.js",
    "identity:dev": "pnpm --filter @dream/identity dev",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
